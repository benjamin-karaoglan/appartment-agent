# PNPM Configuration
# This file configures pnpm for optimal performance

# Enable hoisting (compatibility with some packages)
hoist=true

# Shamefully hoist all packages (needed for next-intl/plugin subpath import)
shamefully-hoist=true

# Use hoisted node_modules structure (like npm/yarn) for better compatibility
node-linker=hoisted

# Use a local store for better performance
store-dir=.pnpm-store

# Strict peer dependencies (catches version conflicts)
strict-peer-dependencies=false

# Auto-install peer dependencies
auto-install-peers=true

# Prefer offline mode (uses cache when available)
prefer-offline=true

# Lockfile settings
lockfile=true

# Resolution mode
resolution-mode=highest

# Registry (use default npm registry)
registry=https://registry.npmjs.org/
