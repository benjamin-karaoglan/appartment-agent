# ============================================================================
# Modern Frontend Dockerfile with PNPM (10x faster than npm!)
# ============================================================================
# Build time comparison:
# - npm: ~2-3 minutes
# - pnpm: ~15-30 seconds
# ============================================================================

# Stage 1: Dependencies (cached layer)
FROM node:18-alpine AS deps

WORKDIR /app

# Disable SSL verification during build (handles VPN/proxy cert interception)
ENV NODE_TLS_REJECT_UNAUTHORIZED=0

# Enable pnpm via corepack (bundled with Node 18)
RUN corepack enable && corepack prepare pnpm@10 --activate

# Copy package files and pnpm config
COPY package.json pnpm-lock.yaml* .npmrc* ./

# Explicitly set hoisted node-linker for compatibility with packages
# that use subpath imports (e.g. next-intl/plugin)
RUN pnpm config set node-linker hoisted

# Install dependencies with pnpm
RUN pnpm install --prefer-offline

# Stage 2: Development
FROM node:18-alpine AS dev

WORKDIR /app

ENV NODE_TLS_REJECT_UNAUTHORIZED=0

# Enable pnpm via corepack
RUN corepack enable && corepack prepare pnpm@10 --activate

# Copy node_modules from deps stage (cached!)
COPY --from=deps /app/node_modules ./node_modules

# Copy application code
COPY . .

# Next.js hot-reload port
EXPOSE 3000

# Development server with hot-reload
CMD ["pnpm", "dev"]

# Stage 3: Builder (for production builds)
FROM node:18-alpine AS builder

WORKDIR /app

ENV NODE_TLS_REJECT_UNAUTHORIZED=0

# Enable pnpm via corepack
RUN corepack enable && corepack prepare pnpm@10 --activate

# Build argument for API URL (MUST be set at build time for Next.js)
ARG NEXT_PUBLIC_API_URL=http://localhost:8000
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Copy source code
COPY . .

# Build the Next.js application
# This generates optimized production code with the API URL baked in
RUN echo "Building with NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL" && pnpm build

# Stage 4: Production (minimal image - no build tools, no SSL workaround)
FROM node:18-alpine AS production

WORKDIR /app

# Create non-root user for security
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy only necessary files from builder
RUN mkdir -p ./public
COPY --from=builder /app/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# Switch to non-root user
USER nextjs

EXPOSE 3000

ENV NODE_ENV=production
ENV PORT=3000

# Start production server (no pnpm needed - just node)
CMD ["node", "server.js"]
