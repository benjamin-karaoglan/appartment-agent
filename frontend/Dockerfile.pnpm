# ============================================================================
# Modern Frontend Dockerfile with PNPM (10x faster than npm!)
# ============================================================================
# Build time comparison:
# - npm: ~2-3 minutes
# - pnpm: ~15-30 seconds
# ============================================================================

# Stage 1: Dependencies (cached layer)
FROM node:18-alpine AS deps

WORKDIR /app

# Install pnpm globally (version 10 to match local development)
RUN npm install -g pnpm@10

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies with pnpm (FAST!)
# --frozen-lockfile ensures reproducible builds
# --prefer-offline uses cache when possible
RUN pnpm install --frozen-lockfile --prefer-offline

# Stage 2: Development
FROM node:18-alpine AS dev

WORKDIR /app

# Install pnpm globally (version 10 to match local development)
RUN npm install -g pnpm@10

# Copy node_modules from deps stage (cached!)
COPY --from=deps /app/node_modules ./node_modules

# Copy application code
COPY . .

# Next.js hot-reload port
EXPOSE 3000

# Development server with hot-reload
CMD ["pnpm", "dev"]

# Stage 3: Builder (for production builds)
FROM node:18-alpine AS builder

WORKDIR /app

# Install pnpm globally (version 10 to match local development)
RUN npm install -g pnpm@10

# Build argument for API URL (MUST be set at build time for Next.js)
ARG NEXT_PUBLIC_API_URL=http://localhost:8000
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Copy source code
COPY . .

# Build the Next.js application
# This generates optimized production code with the API URL baked in
RUN echo "Building with NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL" && pnpm build

# Stage 4: Production (minimal image)
FROM node:18-alpine AS production

WORKDIR /app

# Install pnpm globally (version 10 to match local development)
RUN npm install -g pnpm@10

# Create non-root user for security
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy only necessary files from builder
# Create public directory (may be empty)
RUN mkdir -p ./public
COPY --from=builder /app/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# Switch to non-root user
USER nextjs

EXPOSE 3000

ENV NODE_ENV=production
ENV PORT=3000

# Start production server
CMD ["node", "server.js"]
